<% layout('/layout/boilerplate') %>
    <div class="mb-3">Total Applications : <%=applicants.length %>
    </div>
    <%for(let applicant of applicants){%>
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">
                    <%= applicant.name %>
                </h5>
                <p class="card-text">Department : <%= applicant.department %>
                </p>
                <p class="card-text">Email : <%= applicant.email %>
                </p>
                <p class="card-text">Has Qualified : <%=applicant.additionalExams%>
                </p>
                <a href="/admin/applicants/<%=applicant._id%>" class="card-link btn btn-primary">View</a>
                <!-- <a href="#" class="card-link btn btn-success">Accept</a>
                <a href="#" class="card-link btn btn-danger">Reject</a> -->
            </div>
        </div>
        <%}%>