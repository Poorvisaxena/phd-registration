<% layout('/layout/boilerplate') %>
    <div class="row">
        <div class="col-12 col-md-6">
            <h3>Department List</h3>
            <% for(let dept of departments) {%>
                <div class="listItem">
                    <span>
                        <%= dept.name %>
                    </span>
                    <span class="float-end">
                        <form class="d-inline" action="/admin/departments/<%=dept._id%>/edit">
                            <button class="btn"><i class="far fa-edit"></i></button>
                        </form>
                        <form class="d-inline" action="/admin/departments/<%=dept._id%>?_method=DELETE" method="POST">
                            <button class="btn"><i class="fas fa-trash-alt"></i></button>
                        </form>
                    </span>
                </div>
                <% } %>
        </div>
        <div class="col-12 col-md-5 my-5 ms-auto">
            <form action="/admin/departments/new" method="POST" class="validated-form" novalidate>
                <label for="deptID" class="form-label">ID of Department</label>
                <input type="text" class="form-control" name="dept_id" id="deptID" required>
                <label for="name" class="form-label">Name of Department</label>
                <input type="text" class="form-control" name="name" id="name" required>
                <button class="btn btn-primary mt-2">Add New Department</button>
            </form>
        </div>
    </div>
    <script src="/javascripts/bootstrapFormValidation.js"></script>